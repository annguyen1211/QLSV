<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý sinh viên"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên: "
            android:textStyle="bold|italic"
            android:textSize="19dp"
            android:layout_marginLeft="20dp">

        </TextView>

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:hint="Nguyen Van A"
            android:textSize="20dp">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ngày tháng năm sinh: "
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">

        </TextView>

        <EditText
            android:id="@+id/date_edt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="1/1/2016"
            android:textSize="20dp">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Trường học: "
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">

        </TextView>

        <EditText
            android:id="@+id/school_edt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="@string/mySchoolHere"
            android:textSize="18dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Giới Tính: "
            android:textSize="20dp"
            android:layout_marginLeft="20dp">


        </TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/male_rb"
                android:layout_width="77dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:text="Nam">

            </RadioButton>

            <RadioButton
                android:id="@+id/female_rb"
                android:layout_width="77dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:text="Nữ">

            </RadioButton>

        </RadioGroup>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích: "
            android:textSize="20dp"
            android:layout_marginLeft="20dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/hobby1_cb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:text="Thể thao">

            </CheckBox>
            <CheckBox
                android:id="@+id/hobby2_cb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:text="Du Lịch">

            </CheckBox>
            <CheckBox
                android:id="@+id/hobby3_cb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:text="Đọc Sách">

            </CheckBox>

        </RadioGroup>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/output_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:text="NHẬP LIỆU/HIỂN THỊ"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="NHẬP LẠI"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>





</androidx.appcompat.widget.LinearLayoutCompat>